{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/*"],
      "@examples/*": ["src/examples/*"],
      "@storage/*": ["src/storage/*"],
      "@tests/*": ["src/__tests__/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
